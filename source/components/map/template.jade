link( rel="stylesheet", href="/components/map/style.css" )
script( src="/components/map/script.js" )

.container-fluid

  .b-map

    script( src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=3da27ed2-82cd-4c8f-8a07-8b32774f2abc" type="text/javascript" )
    
    .bj-sorting
      .text-muted Список магазинов:
      .dropdown
        a#dLabel(href="#" role="button" data-toggle="dropdown" data-target="#" aria-expanded="false")
          | Все
          span.caret
        ul.dropdown-menu(role="menu" aria-labelledby="dLabel")
          li
            a( href="" data-tab="all" ) Все
          li
            a( href="" data-tab="moscow" ) Москва
          li
            a( href="" data-tab="spb" ) Санкт-Петербург
      .clearfix
      
    hr
    
    script  
      | //cluster icons are black by default
      | window.yMapPlacemarksIcons = 'invertedDarkblueClusterIcons';//take a look here for different icons https://tech.yandex.ru/maps/archive/doc/jsapi/2.0/ref/reference/option.presetStorage-docpage/
    
    #yMapShops( data-ajax-url="/components/map/placemarks.json" data-ajax-method="GET" )

