@import '../../styl/component-include.styl'

#yMapShops
  height 611px
  
.bj-sorting
  font-size .85rem
  
  .text-muted
    float left
    margin-right 15px
    
  .dropdown
    float left
    
    a:hover
      text-decoration none
      
    .caret
      margin-left 5px
    
  &:after
    content ''
    display block
    clear both
    
  .dropdown-menu
    border none
    font-size .85rem
    left -20px
    min-width calc(100% + 20px)
    
    >li>a:focus,
    >li>a:hover
      background #f5f5f5
  
.b-map
      
    &-body
      position absolute
      top 20px
      left -10px
      background-color #fff
      padding 5px 0
      display none
      z-index 10
      
    &-item
      background-color #fff
      transition( background-color .2s ease )
      cursor pointer
      padding 0 10px
      white-space nowrap
    
      &:hover
        background-color #f2f2f2
      

  &__nav
    margin-bottom 20px
    
    &-item
      display inline-block
      line-height 40px
      height 40px
      padding 0 15px
      font-size 10.5pt
      background-color #f2f2f2
      cursor pointer
      margin 0 6px 6px 0
      
      &:hover
        opacity .7
      
      &.i-active
        background-color #666666
        color #fff
        cursor default
        
        &:hover
          opacity 1
          
      @media( max-width 570px )
        padding 0 10px
      
.b-shop-balloon
  background-color #fff
  box-shadow -5px -5px 20px rgba( 0,0,0,.2 )
  padding 15px
  width 250px
  position relative
  padding-left 80px
  box-sizing border-box
  font-size 16px
  
  &__close
    width 10px
    height 10px
    position absolute
    top 10px
    right 14px
    cursor pointer
    
    &:before
      content ''
      display block
      border-right 1px solid #999
      width 0
      height 10px
      transform( rotate(45deg))
      position absolute
      top 0
      right 4px
    
    &:after
      content ''
      display block
      border-right 1px solid #999
      width 0
      height 10px
      transform( rotate(-45deg))
      position absolute
      top 0
      right 4px
      
  &__name
    font-weight bold
    font-size 20px
    text-align center
    width 80px
    position absolute
    top 13px
    left 0
    
  &__img
    width 30px
    height 30px
    position absolute
    top 10px
    left 15px
    background-repeat no-repeat
    background-position center
    background-size contain
      
  &__heading
    font-weight bold
    font-size 16px
    margin-bottom 15px
    
    .b-balloon.i-infrastructure &
      margin-bottom 0