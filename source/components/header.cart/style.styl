@import '../../styl/component-include.styl'

.bj-page-header__cart-dropdown

  &,
  a,
  a:hover,
  a:active,
  a:focus,
  h3,
  .h3
    color #fff
  
  &-hr
    padding-top 20px
    border-top 1px solid rgba( 255,255,255,.1 )
      
  article
    background-color #5c6eb8
    font-size 10.5pt
    position absolute
    top 0
    left 0
    z-index 1000
    width 100%
    display none
    padding 0 0 30px
    
    .container-fluid
      opacity 0
      transition( opacity .5s ease )
    
    &.i-animate
    
      .container-fluid
        opacity 1
        
  p
    font-size 8pt
    
  .btn-default
    border-color #fff
    color #fff
    
    &:hover,
    &:active,
    &:focus
      background-color transparent
      border-color rgba( 255,255,255,.7 )
      color #fff
      
.b-cart-dropdown__item
  display flex
  justify-content space-between
  font-size 9pt
  line-height 1.2
  
  b
    display block
    margin-top 10px
  
  img
    margin-right 18px
    
.bj-cart-icon
  position relative
  
.bj-cart-icon__num
  position absolute
  top 14px
  left 37px
  line-height normal
  font-size 9pt
  