        background-position center center
        background-size cover
        position absolute
        top 11px
        left 20px
        
      &__input
        width 100%
        height 40px
        padding 6px 10px 6px 62px
        background-color transparent !important
        border none
        display inline-block
        vertical-align top
        color #fff
        box-sizing( border-box !important )
        
        &::placeholder
          color #fff
          
        &::-ms-input-placeholder
          color #fff
        
        &:focus
          box-shadow none
          
      &-close
        display none
        vertical-align top
        width 20px
        height 20px
        position relative
        cursor pointer
        position absolute
        top 9px
        right 15px
        z-index 11
        
        &:before
          content ''
          display inline-block
          border-top 1px solid #fff
          width 18px
          transition( transform 0.5s ease )
          position absolute
          top 9px
          right 0
        
        &:after
          content ''
          display inline-block
          border-top 1px solid #fff
          width 18px
          transition( transform 0.5s ease )
          position absolute
          top 9px
          right 0
          
        &:hover
          opacity .7

