            .fields.string
              input.fields.string.form-control(type="text" name="UF_RC" value="" size="20")
        .form-group
          label БАНК:
          #main_UF_BANK.fields.string
            .fields.string
              input.fields.string.form-control(type="text" name="UF_BANK" value="" size="20")
