          label
            | Наименование компании:
            span.starrequired *
          input.bx-auth-input.form-control(size="30" type="text" name="REGISTER[WORK_COMPANY]" value="")
        .form-group
          label
            | ИНН:
            span.starrequired *
          #main_UF_INN.fields.string
            .fields.string
              input.fields.string.form-control(type="text" name="UF_INN" value="" size="20")
        .form-group
          label Юридический адрес:
          #main_UF_UR_ADDRESS.fields.string
            .fields.string
              textarea.fields.string.form-control(name="UF_UR_ADDRESS" cols="50" rows="5")
