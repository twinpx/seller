@import '../../styl/component-include.styl'

.b-inform-blocks
  position relative
  //padding-top calc( 33.33333333% - 15px )
  transition( padding-top .2s ease )
  
  &.i-animate
    padding-top calc( 33.33333333% - 15px )
    
  &.i-1
    transition-delay 0s
    
  &.i-2
    transition-delay .3s
    
  &.i-3
    transition-delay .6s
  
  hr
    display none
      
  @media( max-width 575px )
    &.i-animate
      padding-top 0
    
    hr
      display block

  &__item
    position absolute
    top 0
    height 100%
    z-index 1
    
    div,
    a
      background-repeat no-repeat
      background-position center top
      background-size cover
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index 1
      
    
    .b-inform-blocks > &:first-child,
    .b-inform-blocks [id*=bx_incl_area]:first-of-type &
      left 0
    
    .b-inform-blocks > &:last-child,
    .b-inform-blocks [id*=bx_incl_area]:last-of-type &
      right 0
    
    &.i-size-4
      width calc( 33.33333333% - 15px )
    
    &.i-size-6
      width calc( 50% - 15px )
    
    &.i-size-8
      width calc( 66.66666667% - 15px )
      
    @media( min-width 576px ) and ( max-width 767px )
    
      &.i-size-4
        width calc( 33.33333333% - 5px )
      
      &.i-size-6
        width calc( 50% - 5px )
      
      &.i-size-8
        width calc( 66.66666667% - 5px )
      
    @media( max-width 575px )
      display block
      width auto !important
      position relative
      top auto
      left auto !important
      right auto !important
      padding-top 100%

.b-inform-blocks [id*=bx_incl_area]
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  
.b-inform-blocks [id*=bx_incl_area]:first-of-type
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.b-inform-blocks [id*=bx_incl_area]:last-child
  position absolute
  top 0
  right 0