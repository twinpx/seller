@import '../../styl/component-include.styl'

.b-shop-detail

  &__placeholder
  
    .row
      position relative
  
    .i-loaded &
      opacity 0
      position absolute
      top 0
      left 0
      width 100%
      z-index -1
      
  .container-fluid
    position relative

  &__container
    position relative
    
    .i-loaded &
      opacity 1
      position relative
      width auto
    
  &__gallery
    background-color transparent !important
    height auto !important
    position relative
    
  .swiper-button-next,
  .swiper-button-prev
    top 50%
    left auto
    margin-top -13px
    width 25px
    height 25px
    background-repeat no-repeat
    background-position center
    background-size contain
    
    &:after
      display none
      
    &:focus
      outline none
      
  .swiper-lazy-preloader
    border-color transparent
    border-radius 0
    background-repeat no-repeat
    background-position center
    background-size cover
    width 60px
    height 60px
    margin-top -30px
    margin-left -30px

  h5
    font-weight normal
    margin-bottom 0
    
  &__ill
    width 100%
  
  &__social
    background-color transparent !important
    height auto !important
    
    a
      display inline-block
      width 24px
      height 24px
      background-repeat no-repat
      background-position center
      background-size contain
      margin-right 15px
      
  &__back-link
    
    a
      display inline-block
      line-height 16px
      
      &:before
        content ''
        display inline-block
        vertical-align top
        background embedurl( './img/left-arrow.svg' ) no-repeat center
        background-size cover
        width 8px
        height 17px
        margin-right 15px
        
      &:hover:before
        animation .2s linear 0s moveArrow
        
  &__map
    background-color #f2f2f2 !important
    position absolute
    top 0
    left calc( 50% + 15px )
    height 100%
    width calc( 50vw - 25px )
    
    @media( max-width 991px )
      position static
      top auto
      left auto
      height 500px
      width auto
      
@keyframes moveArrow
  0%
    transform( translateX(0))
  50%
    transform( translateX( -5px ))
  100%
    transform( translateX(0))
      
