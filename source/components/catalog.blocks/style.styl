@import '../../styl/component-include.styl'

.b-catalog-block

  &__img
    display block
    height 200px
    background-repeat no-repeat
    background-position center
    background-size cover

  &__title
    max-height 40px
    overflow hidden
    text-overflow ellipsis
        
    h2&
      margin 0
      padding-top 5px
      
      @media( max-width 767px )
        padding 0 0 2px
      
  @media( max-width 767px )
    text-align center

.bj-block__title
  width 100%
  height 65px
  border-bottom 1px solid #f2f2f2
  margin-bottom 9pt
  line-height 1.3
  
  &.bj-table
    width 100%
      
  .bj-table-cell
    vertical-align middle
    text-align left
    padding 10px 0
    height 45px

.bj-block__title__wrapper
  display inline-block
  vertical-align middle
  max-height 45px
  overflow hidden
  text-overflow ellipsis

@media (max-width:767px)
  .bj-block__title
    .bj-table-cell
      text-align center
      height auto

.bj-block__title h2,.bj-block__title .h2
  margin 0

.bj-block__list
  font-size 9pt
  
  a
    white-space nowrap
    word-wrap break-word
    margin-right 10px
    display inline-block
    vertical-align top
    max-width 95%
    
    &:hover
      text-decoration none

.bj-block__list__text
  display inline-block
  vertical-align top
  overflow hidden
  max-width 100%
  text-overflow ellipsis

@media (max-width:767px)
  .bj-block
    text-align center

.bj-block__img
  display block
  margin-right auto
  margin-left auto