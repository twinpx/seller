@import '../../styl/component-include.styl'

#seller-tuner.side-nav
  width 80%
  max-width 1050px
  background-color #f5f5f5
  padding 64px
  overflow hidden
  
#seller-tuner-icon
  display block
  position fixed
  top 200px
  left -3px
  width 53px
  height 50px
  background-repeat no-repeat
  background-position center
  background-size contain
  background-color #3b8f61
  cursor pointer
  transition( all 0.2s ease )
  //z-index is important for basket page iPad version
  z-index 110
  
  .i-blur &
    filter blur( $blur )
  
  span
    display block
    width 20px
    height 20px
    margin 15px 0 0 16px
    background-repeat no-repeat
    background-position center
    background-size contain
    
  &:hover
    left 0
  
.b-seller-tuner
  font-family "Open Sans", Arial, sans-serif !important
  font-size 10.5pt !important

  .pickr
    z-index auto

  &.side-nav
    //transform( translateX(0px) !important)

    a
    
      &,
      &:hover,
      &:active,
      &:focus
        color #3b8f61
  
    .b-h2
    
      span
        display inline-block
        vertical-align middle
      
      a
        font-size 10pt
        height auto
        line-height normal
        display inline-block
        vertical-align middle
        padding 0 0 0 34px

  &-close
    position absolute
    top 72px
    right 64px
    width 16px
    height 16px
    background embedurl( 'img/close.svg' ) no-repeat center
    cursor pointer
    
    &:hover
      opacity .7
    
  &__menu
    height calc( 100vh - 146px - 83px )
    
    .side-nav & a
      display block
      height 47px
      line-height 47px
      padding 0
      
      &.i-active
        font-weight bold
        
  &__content
    height calc( 100vh - 146px - 83px )
    
    section
      background-color #fff
      padding 30px
      margin-top -100px
      opacity 0
      transition( all .5s ease )
      
    .i-anim section
      
        &:nth-of-type(1)
          transition-delay .07s
          
        
        &:nth-of-type(2)
          transition-delay .14s
        
        &:nth-of-type(3)
          transition-delay .21s
          
        .i-open &
          opacity 1
          margin-top 0
      
    hr.i-line
      border-width 2px
      border-color #f5f5f5
      
    div[data-tab]
      display none
      
      &.i-active
        display block
        
  &__bottom
    position absolute
    bottom 0
    left 64px
    width calc( 100% - 64px - 64px )
    background-color #f5f5f5
    padding 20px 0
    
    .btn
      vertical-align middle
      
    .side-nav & a
      font-size 10pt
      height auto
      line-height 39px
      display inline-block
      vertical-align middle
      padding 0 0 0 34px
      
  &__colors-1 &__block,
  &__colors-2 &__block
    
    .b-item
      display inline-block
      vertical-align top
      width 24px
      height 24px
      border-radius 51%
      cursor pointer
      margin 0 20px 9px 0
      transition( transform 0.3s ease)
      text-align center
        
      &:after
        content ''
        display none
        vertical-align top
        width 14px
        height 7px
        margin-top 6px
        border-left 1px solid #fff
        border-bottom 1px solid #fff
        transform( rotate(-45deg))
      
      &:hover,
      &.i-active
        transform( scale(1.3))
        
      &.i-active::after
        display inline-block
        
  &__colors .b-colorpicker
    margin -4px 20px 9px 0
        
  .b-colorpicker
    display inline-block
    vertical-align top
    width 24px
    height 24px
    background-color #ececec
    border-radius 51%
    cursor pointer
    text-align center
    
    .pcr-button
      width 24px
      height 24px
      border-radius 51%
      padding 0
      transform( scale(1.3))
      
      &:before
        top 5px
        left 6px
        width 13px
        height 13px
        background-image url( 'img/colorpicker.svg' ) !important
        background-repeat no-repeat !important
        background-position center !important
        background-size cover !important
        z-index 1
        
      &.i-dark:before
        background-image url( 'img/colorpicker-white.svg' ) !important
      
      &:after
        display none !important
      
  &__fonts &__block,
  &__font-size &__block,
  &__screen-width &__block
    
    div
      display inline-block
      background #f5f5f5
      line-height 35px
      padding 0 39px
      margin 0 20px 20px 0
      transition( background-color 0.3s ease)
      border-radius 18px
      cursor pointer
      
      &.i-active
        background-color #2f3253
        color #fff
      
  &__tags &__block
  
    .b-item
      display inline-block
      vertical-align top
      margin 0 35px 20px 0
  
    .b-tag-color
      display inline-block
      vertical-align top
      width 24px
      height 24px
      border-radius 51%
      cursor pointer
      transition( transform 0.3s ease)
      text-align center
            
    .b-tag-name
      display inline-block
      vertical-align top
      margin-left 10px
      margin-top 5px
      font-style normal
      
  &__img
    padding 15px 30px
    transition( all 0.5s ease )
    cursor pointer
    border 1px solid #e9e9e9
      
    &:hover
      box-shadow 0 0 20px rgba(0,0,0,.05)
      border-color transparent
      
    &.i-active
      border-color #2f3154
  
    img
      width 100%
      height auto
      
  .btn-default
  
    &,
    &:hover,
    &:active,
    &:active:focus
      background-color #3b8f61 !important
      border-color #3b8f61 !important
      color #fff !important
      
    &:hover,
    &:active
      opacity .7
      
.side-nav .pcr-app
  z-index 100

  .pcr-interaction input
    line-height 35px
    font-size 10.5pt
    font-family sans-serif
    border-radius 0
    padding-top: 0;
    padding-bottom: 0;
    letter-spacing 0
    
    &[ type=text ]
      padding-top 2px
      padding-bottom 2px

    &.pcr-save,
    &.pcr-clear
      min-width 120px
      
      display: inline-block;
      font-weight: 400;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      touch-action: manipulation;
      cursor: pointer;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      border: 1px solid transparent;
      
      height: auto;
      text-transform: none;
      
      border-width: 2px;
      text-shadow: none;
      box-shadow: none;
      border-radius: 0;
      background: transparent;
      transition( all 0.2s ease )
        
    &.pcr-save
    
      &,
      &:hover,
      &:active,
      &:active:focus
        background-color: #3b8f61;
        border-color: #3b8f61;
        color: #fff;
      
        &:hover,
        &:active
          opacity .7
      
    &.pcr-clear
      background-color: #ececec;
      border-color: #ececec;
      color: #3b8f61;
      
      &:hover,
      &:focus
        color: #333;
        background-color: #ececec;
        border-color: #ececec;
      
.nicescroll-rails-hr
  display none !important
  
  