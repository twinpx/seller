@import '../../styl/component-include.styl'

.bj-look.b-ph-block
  
  &.i-ph-animated
    
    .b-ph-content
      position static
      width auto
      opacity 1
      
    .b-ph
      position absolute
      top 0
      left 0
      opacity 0
      z-index -1

.bj-look__table {
  border: 1px solid #e2e2e2;
  width: 100%
}

.bj-look__table td {
  padding: 13px 12px;
  border-bottom: 1px solid #e2e2e2
}

.bj-look__table td:nth-child(even) {
  text-align: right
}

.bj-look .fotorama {
  min-height: 300px;
  /*background:url(/bitrix/templates/bejet_seller-1.6.0/components/bitrix/catalog.element/lookbook/images/preloader.gif) no-repeat center center*/
}

.bj-look .fotorama__dot {
  width: 6px;
  height: 6px
}

.bj-look .fotorama__nav-wrap {
  margin-top: 10px
}

.bj-look__price {
  font-size: 26pt;
  font-weight: 400;
  line-height: 1.4
}

.bj-look .fotorama__arr--next {
  width: 51px;
  height: 51px;
  background: url("data:image/png;base64,") no-repeat center center;
  right: 15px
}

.bj-look .fotorama__arr--prev {
  width: 51px;
  height: 51px;
  background: url("data:image/png;base64,") no-repeat center center;
  left: 15px
}

.bj-look .fotorama img[src*="hanger.svg"] {
  margin: 0 auto;
  width: 65% !important;
}

.b-catalog-detail

  &__gallery
    position relative
    
    .fotorama__html a
      display block !important
      line-height 0
      
      &:hover
        opacity 1
      
      img
        margin 0 auto
        max-width 100%
      
    .fotorama__wrap--css3 .fotorama__html,
    .fotorama__wrap--css3 .fotorama__stage .fotorama__img
      text-align center
      
    .fotorama__wrap--css3 .fotorama__html
      display flex
      justify-content center
      align-items center
      
      div[ data-thumb ]
        width 100%
      
    .magnify
      width 100%
      vertical-align top
      
      a
        pointer-events none
      
      img
        margin 0 auto
        max-width 100%