@import '../../styl/component-include.styl'

.b-catalog-detail

  &__tags
    font-size 9pt
    margin-top 12px
    text-align right
    
    a
      margin-left 22px

  .col-sm-7&__props
    display flex
    justify-content space-between
    font-size 9pt
    
    span
      display inline-block
      
  &__props-icons
    text-align right
    
