@import '../../styl/component-include.styl'

.b-catalog-detail

  &__tags
    font-size 9pt
    margin-top 12px
    text-align right
    
    a
      margin-left 22px

  &__props
    display flex
    justify-content space-between
    font-size 9pt
    
    span
      display inline-block

  &__rating
    display inline-block
    width 79px
    height 12px
    background embedurl( 'img/rating.png' ) no-repeat center
    
  &__gallery-icons
    position absolute
    top 20px
    left 20px
    z-index 10
    
  .col-sm-4 hr.i-line:first-child
    margin-top 0
    
  &__price-block
    padding 0 0 2px
    
    .row
      margin-bottom 0
    
  &__price
    font-size 27pt
    margin-bottom 3px
    
    &.i-sale
      color #cc3333
      
  &__old-price,
  &__benefit
    font-size 10.5pt
    
    span
      display block
      font-size 7pt
      
  &__colors-block
    text-align center
    padding 9px 0 0
    
  &__colors-item
    display inline-block
    vertical-align top
    width 24px
    height 24px
    border-radius 51%
    margin 0 9px 9px
    cursor pointer
    transition( transform 0.3s ease )
    text-align center
    
    &:hover
      transform scale( 1.3 )
      
    span
      display none
      width 14px
      height 7px
      margin-top 6px
      border-left 1px solid #fff
      border-bottom 1px solid #fff
      transform( rotate(-45deg) )
      
    &.i-active
      transform scale( 1.3 )
      
      span
        display inline-block
        vertical-align top
      
  &__sizes-block
    display flex
    justify-content center
    flex-wrap wrap
    
  &__sizes-item
    font-size 10.5pt
    min-width 50px
    display inline-block
    vertical-align top
    cursor pointer
    text-align center
    border-bottom 2px solid transparent
    padding-bottom 3px
    margin 0 5px 16px
    
    &.i-active
      color #2f3154
      border-bottom 2px solid #2f3154
      
  &__size-table-link
    text-align center
    font-size 7pt
    font-weight 400
    
  &__button-block.row
    padding 9px 0
    margin-bottom 0
    
    .text-center
      line-height 28px
    
  &__properties
    margin-top -10px
    
  &__prop-title
    display block
    position relative
    padding 10px 0
    color #2f3154
    
    &:after
      content ''
      display block
      width 12px
      height 7px
      position absolute
      top 15px
      right 10px
      background embedurl( 'img/prop-arrow.png' ) no-repeat 0 0
      transition( all 0.3s ease )
    
    &:hover
      text-decoration none
      
    &[ aria-expanded="true" ]:after
      transform( rotate( 180deg ))
      
  &__prop-collapse
    margin-bottom 15px
    
  .fotorama__stage
    background-color #f2f2f2
    
  @media( max-width 767px )
  
    &__tags
      text-align left
      
      a
        margin 0 22px 0 0
  
    &__props
      display block
      text-align center
      
      span
        display block
        margin-bottom 5px
        
        &.b-catalog-detail__rating
          margin 7px auto 0
  
    &__icons
      display flex
      justify-content space-between
      
  &__share
    text-align center
    
    h5
      font-size 7pt
      font-weight 400
      
  &__num
    font-size 7pt
    font-weight 400
    text-align center
    
  &__animation-left
    transform( translateX( -50px ))
    transition( all 0.5s ease )
    opacity 0
    
    .i-load &
      transform( translateX(0))
      opacity 1
    
  &__animation-right
    transform( translateX( 50px ))
    transition( all 0.5s ease )
    opacity 0
    
    .i-load &
      transform( translateX(0))
      opacity 1    
    
.b-icon-zoom,
.b-icon-fav,
.b-icon-comments,
.b-icon-share,
.b-icon-size
  width 16px
  height 16px
  margin 0 auto 30px
  cursor pointer
  background-size cover
  opacity 0
  
  &:hover
    opacity .5
    
  @media( max-width 767px )
    width 24px
    height 24px
    
  .i-load &
    opacity 1
  
.b-icon-zoom
  background embedurl( 'img/zoom.svg' ) no-repeat center
  transition( opacity 0.5s ease 0.3s )
  
.b-icon-fav
  background embedurl( 'img/fav.svg' ) no-repeat center
  transition( opacity 0.5s ease 0.5s )
  
.b-icon-comments
  background embedurl( 'img/comments.svg' ) no-repeat center
  transition( opacity 0.5s ease 0.7s )
  
.b-icon-share
  background embedurl( 'img/share.svg' ) no-repeat center
  transition( opacity 0.5s ease 0.9s )
  
.b-icon-size
  background embedurl( 'img/sizes.svg' ) no-repeat center
  transition( opacity 0.5s ease 1.1s )
  
.b-icon-discount,
.b-icon-recommend,
.b-icon-hit,
.b-icon-action,
.b-icon-new
  width 32px
  height 32px
  border-radius 51%
  color #fff
  line-height 32px
  text-align center
  margin-bottom 9px
  background-color #696a83
  background-size 50%
  background-repeat no-repeat
  background-position center
  font-size 9.5pt
  
.b-icon-recommend
  background-image embedurl( 'img/recomendation.svg' )
  
.b-icon-hit
  background-image embedurl( 'img/hit.svg' )
  
.b-icon-action
  background-image embedurl( 'img/campaign.svg' )
  
.b-icon-new
  background-image embedurl( 'img/new.svg' )
  
.b-icon-discount
  background-color #ff3333