    min-width 50px
    display inline-block
    vertical-align top
    cursor pointer
    text-align center
    border-bottom 2px solid transparent
    padding-bottom 3px
    margin 0 5px 16px
    
    &.i-active
      color #2f3154
      border-bottom 2px solid #2f3154
      
    &.i-disabled
      opacity 0.5
      
  &__size-table-link
    text-align center
    font-size 7pt
    font-weight 400
    
  &__button-block.row
    padding 9px 0
    margin-bottom 0
    
    .text-center
      line-height 28px
    
  &__properties
    margin-top -10px
    
  &__prop-title
    display block
    position relative
    padding 10px 0
    color #2f3154
    
    &:after
      content ''
      display block
      width 12px
      height 7px
      position absolute
      top 15px
      right 10px
      background embedurl( 'img/prop-arrow.png' ) no-repeat 0 0
      transition( all 0.3s ease )
    
    &:hover
      text-decoration none
      
    &[ aria-expanded="true" ]:after
      transform( rotate( 180deg ))
      
  &__prop-collapse
    margin-bottom 15px
    
  .fotorama__stage
    background-color #f2f2f2
    
  @media( max-width 767px )
  
    &__tags
      text-align left
      
      a
        margin 0 22px 0 0
  
    .col-sm-7&__props
      display block
      text-align center
      
      span
        display block
        margin-bottom 5px
        
        span
          display inline-block
          margin-bottom 0
        
        &.b-catalog-detail__rating
          margin 15px auto 20px
  
    &__icons
      display flex
      justify-content space-between
      
  &__share
    text-align center
    
    h5
      font-size 7pt
      font-weight 400
      
  &__num
    font-size 7pt
    font-weight 400
    text-align center
    
  &__animation-left
    padding-left 35px
    margin-top 20px
    margin-bottom 20px
    border-right 1px solid #f2f2f2
    transform( translateX( -50px ))
    transition( all 0.5s ease )
    opacity 0
    
    .i-load &
      transform( translateX(0))
      opacity 1
      
    @media( max-width 767px )
      padding-left 25px
      padding-right 25px
      border none
      
  &__icons
    margin-top 20px
    margin-bottom 20px
    
  &__animation-right
    padding-right 35px
    margin-top 20px
    margin-bottom 20px
    transform( translateX( 50px ))
    transition( all 0.5s ease )
    opacity 0
    
    .i-load &
      transform( translateX(0))
      opacity 1 
      
    @media( max-width 767px )
      padding-right 25px
      padding-left 25px
      border none   
    
