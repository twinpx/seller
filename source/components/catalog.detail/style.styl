      text-align center
      margin-top 10px

  &__rating
    display inline-block
    width 79px
    height 12px
    
  &__gallery
    position relative
    
  &__gallery-icons
    position absolute
    top 20px
    left 20px
    z-index 10
    
  .col-sm-4 hr.i-line:first-child
    margin-top 0
    
  &__ill
    border 1px solid #f2f2f2
    
    & > .row
      margin-bottom 0
    
  &__price-block
    padding 0 0 2px
    
    .row
      margin-bottom 0
    
  &__price
    font-size 27pt
    margin-bottom 3px
    
    &.i-sale
      color #cc3333
      
  &__old-price,
  &__benefit
    font-size 10.5pt
    
    span
      display block
      font-size 7pt
      
  &__colors-block
    text-align center
    padding 9px 0 0
    
  &__colors-item
    display inline-block
    vertical-align top
    width 24px
    height 24px
    border-radius 51%
    margin 0 9px 9px
    cursor pointer
    transition( transform 0.3s ease )
    text-align center
    border 1px solid #eee
    
    &:hover
      transform scale( 1.3 )
      
    span
      display none
      width 14px
      height 7px
      margin-top 6px
      border-left 1px solid #fff
      border-bottom 1px solid #fff
      transform( rotate(-45deg) )
      
