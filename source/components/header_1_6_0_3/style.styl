@import '../../styl/component-include.styl'

#sellerHeader_3.b-header
  width auto
  
#sellerHeader_3
  font-size .86em

  .bj-page-header__top
    padding 10px 0 0
    height 60px
    
    a
    
      &,
      &:hover,
      &:active,
      a:focus
        color #2f3154
        text-decoration none
        
    .row
      position relative

  .bj-menu-icon
    display inline-block
    vertical-align top
    margin-top 12px
    width 16px
    height 16px
    background-repeat no-repeat
    background-position center center      

  @media (max-width:1200px)

    .bj-page-header__search
      &.i-active
        .bj-page-header__search__input
          width 620px

  @media (max-width:1125px)
    .bj-page-header__search
      &.i-active
        .bj-page-header__search__input
          width 550px

  @media (max-width:1065px)
    .bj-page-header__search
      &.i-active
        .bj-page-header__search__input
          width 490px

  @media (max-width:770px)
    .bj-page-header__search
      &.i-active
        .bj-page-header__search__input
          width 270px

  .bj-page-header
        
    .popover
      border-radius 3px
      
    .popover-content
      line-height 1.72857143
      
      a
        display block
        margin-bottom 5px
        
      b
        font-weight 400
        
      .glyphicon
        line-height 1.72857143
        width auto
        font-size 10.5pt
        margin-left 6px
        
    .bj-nav-button
    
      @media ( max-width 767px )
        text-align left
        margin-left 3px
          
    .bj-nav-button,
    .bj-top-nav a,
    .bj-cart-icon,
    .bj-search-icon
      transform( scale(0))
      
    &:after
      content ''
      display none
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      transition( background .5s ease )
      z-index 10
      
    &.i-load
                 
      .bj-nav-button,
      .bj-top-nav a,
      .bj-cart-icon,
      .bj-logo,
      .bj-search-icon
        transition( transform 1s ease )
        transform( scale(1))
        
      .bj-nav-button
        transition-delay 0s
                
      .bj-top-nav
        
        a
        
          &:nth-of-type(5)
            transition-delay .05s
        
          &:nth-of-type(4)
            transition-delay .1s
        
          &:nth-of-type(3)
            transition-delay .15s
        
          &:nth-of-type(2)
            transition-delay .2s
        
          &:nth-of-type(1)
            transition-delay .25s
            
      .bj-cart-icon
        transition-delay .05s
        
      .bj-search-icon
        transition-delay .1s
          
    &.i-search
      position relative
      
      &:after
        display block
            
      .bj-nav-button,
      .bj-top-nav a,
      .bj-earphone-icon,
      .bj-cart-icon,
      .bj-logo,
      .bj-search-icon
        transform( scale(0))
        
      .bj-nav-button,
        transition-delay 0
        
      .bj-top-nav
        
        a
        
          &:nth-of-type(5)
            transition-delay .05s
        
          &:nth-of-type(4)
            transition-delay .1s
        
          &:nth-of-type(3)
            transition-delay .15s
        
          &:nth-of-type(2)
            transition-delay .2s
        
          &:nth-of-type(1)
            transition-delay .25s
            
      .bj-cart-icon
        transition-delay .05s
        
      .bj-logo
        transition-delay .1s
        
      .bj-search-icon
        transition-delay .1s
        
      .bj-page-header__search-close
        display block
        
      .bj-page-header__search
        display inline-block
        
    &.i-ready:after
      background rgba( 0,0,0,.05 )
      
    &.i-ready
    
      .bj-page-header__search
        opacity 1
        transform( translateX(0))
        transition( all .5s ease .5s )
        
        &-close
          
          &:before
            transform( rotate( 45deg ))
            
          &:after
            transform( rotate( -45deg ))
      
    &__search
      display none
      vertical-align top
      width calc( 100% - 50px )
      opacity 0
      transform( translateX( 100px ))
      position absolute
      top 0
      left 0
      z-index 11
      
      form
        position relative
      
      &-icon
        display inline-block
        vertical-align top
        width 16px
        height 16px
        background-repeat no-repeat
        background-position center center
        position absolute
        top 12px
        left 20px
        
      &__input
        width 100%
        height 40px
        padding 6px 10px 6px 62px
        background-color transparent !important
        border none
        display inline-block
        vertical-align top
        color #2f3154
        box-sizing( border-box !important )
        font-size 1em
        
        &::placeholder
          color #2f3154
          
        &::-ms-input-placeholder
          color #2f3154
        
        &:focus
          box-shadow none
          
      &-close
        display none
        vertical-align top
        width 20px
        height 20px
        position relative
        cursor pointer
        position absolute
        top 9px
        right 15px
        z-index 11
        
        &:before
          content ''
          display inline-block
          border-top 1px solid #2f3154
          width 20px
          transition( transform 0.5s ease )
          position absolute
          top 10px
          right 0
        
        &:after
          content ''
          display inline-block
          border-top 1px solid #2f3154
          width 20px
          transition( transform 0.5s ease )
          position absolute
          top 10px
          right 0
          
        &:hover
          opacity .7

  .bj-logo
    font-size 18pt
    display inline-block
    vertical-align top
    
    img
      max-width 143px
      vertical-align top

  @media (max-width:767px)
    .bj-logo
      display inline-block
      vertical-align top
      line-height 40px

  .bj-logo-space
    line-height 40px
    
  div[id^=bx_incl_area]
    display inline-block

  .bj-top-nav
    display inline-block
    
    a
      display inline-block
      line-height 40px
      padding 0 4px
    
  .bj-search-space .bj-top-nav a
    margin-right 17px

  .bj-basket-space .bj-top-nav a
    margin-left 17px
      
  .bj-nav-button:hover
  .bj-personal-icon:hover,
  .b-shopping-cart:hover,
  .bj-search-icon:hover,
  .bj-menu-icon:hover,
  .bj-earphone-icon:hover,
  .bj-top-nav a:hover
    transition( all .3s ease-out )
    opacity 0.5
    
  .b-shopping-cart
    display inline-block
    vertical-align top
    width 16px
    height 16px
    margin-top 12px
    background-repeat no-repeat
    background-position center center
    
  .bj-search-icon
    position relative
    display inline-block
    cursor pointer
      
    span
      display inline-block
      vertical-align top
      width 16px
      height 16px
      margin-top 12px
      background-repeat no-repeat
      background-position center center
        
  .bj-page-header
      
    button.bj-personal-icon
      background 0 0
      border none
      padding 0
      
    .col-md-3
      text-align right
      
  .bj-logo-space
    line-height 40px
    text-align center
    
  .bj-personal,
  .bj-cart-icon,
  .bj-nav-button,
  .bj-search-icon
    display inline-block
    vertical-align top
    width 40px
    line-height 40px
    text-align center
    margin-right 6px
    
    &:hover
      text-decoration none
      
    @media( max-width 1100px )
      margin-left 15px
      
    @media( max-width 1020px )
      margin-left 13px
      
  .bj-search-icon
    margin-right 9px
      
  .bj-cart-icon
    margin-left 12px
    
  @media( max-width 1020px )

    .bj-cart-icon
      margin-left 9px
      
  .bj-personal
    position relative
    z-index 1
      
  .bj-cart-icon
    position relative
    
  .bj-cart-icon__num
    position absolute
    top 14px
    left 37px
    line-height 1
    font-size 1em

  
