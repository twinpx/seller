@import '../../styl/component-include.styl'

.b-lookbook-row
  text-align center

.b-lookbook-col
  display inline-block
  width 50%
  box-sizing border-box
  padding 0 15px
  margin 0 -2px
  
.bj-lookbook__i
  margin-top 20px

.bj-lookbook__img
  display block
  position relative
  overflow hidden
  
  img
    width 100%
    height auto
    transition( all 60s linear )
    transform( scale(1))

.bx-no-touch
  .bj-lookbook__img
  
    &:hover
    
      img
        transform( scale(4))
          
  .bj-lookbook__cover
    position absolute
    top 0
    left 0
    opacity 0
    color #fff
    background rgba(51, 51, 51, 0.7)
    height 100%
    transition( opacity 0.8s ease )
    text-align center
    
    &:hover
      opacity 1
      
      .bj-lookbook__info
        transform( translate3d(0, 0, 0))
        
      h2,
      .b-h2
        transform( translate3d(0, 0, 0))
        
    h2,
    .b-h2
      color #fff
      transform( translate3d(0, -20px, 0))
      transition( all 0.5s ease)
      padding 25px
      display block
      
  .bj-lookbook__info
    position absolute
    bottom 25px
    left 0
    width 100%
    transform( translate3d(0, 50px, 0))
    transition( all 0.5s ease )
      
  .bj-lookbook
  
    .btn-default
      border-width 2px
      border-color #fff
      background-color transparent
      color #fff
      padding 12px 30px

.bj-lookbook__desc

  h2,
  .b-h2
    margin-bottom 10px

.bj-lookbook__cover
  display block
  width 100%
  
  h2,
  .b-h2
    margin 0
    font-size 13pt

.bx-touch

  .bj-lookbook__cover
  
    h2,
    .b-h2
      height 37px
      overflow hidden
      font-size 10.5pt
      margin 10px 16px
      text-align center
      color inherit
        
  .bj-lookbook__info
    border-top 1px solid #f2f2f2
    padding 10px 0 0 16px
    position relative
    color #333
    font-weight 400
    
    .i-new-price
        color #c75454
          
  .bj-lookbook
  
    .btn-default
      position absolute
      right 16px
      top 18px

.bj-lookbook__info
  display block
  
  span
    display block
    
    &.text-large
      margin-bottom 20px

@media (min-width: 768px) and (max-width: 1199px)

  .bj-lookbook__info
    text-align center

.bj-lookbook

  .btn-default
    display inline-block

@media (min-width: 768px) and (max-width: 1199px)

  .bx-touch
  
    .bj-lookbook
    
      .btn-default
        position static
        right auto
        top auto

.bx-no-touch .bj-lookbook .btn-default:hover,
.bx-no-touch .bj-lookbook .btn-default:active,
.bx-no-touch .bj-lookbook .btn-default:focus
  background-color #fff
  color #000
  border-color #ffffff