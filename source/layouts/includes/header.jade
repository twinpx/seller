header.bj-page-header
  section.bj-page-header__top
    .container-fluid
      .row
      
        .col-md-9.col-sm-6.col-xs-6.bj-logo-space
          span.bj-logo
            img( width='143', alt='', src='/template/images/logo.png', height='40', title='' )
            
            
          span.bj-page-header__search.hidden-xs
            form( action='/catalog/' )
              span.bj-page-header__search-icon( style=" background-image: url( '/template/images/search-white.svg' );" )
              input#title-search-input.bj-page-header__search__input.form-control(type='search', name='q', size='23', maxlength='50', autocomplete='off' value='' placeholder="Я ищу..." )
              input(name='s', type='hidden', value='')
            
          .bj-top-nav.hidden-sm.hidden-xs
            a.bj-page-header__menu-link( href="/catalog/" ) Каталог
            a( href="/lookbook/" ) LookBook
            a( href="/catalog/" ) Акции
            a( href="/catalog/" ) Оплата
            a( href="/catalog/" ) Доставка
          
          a#nav-button.bj-nav-button.hidden-sm.hidden-xs( href='#', data-activates='sideNavPanel' )
            span.bj-menu-icon( style="background-image: url( '/template/images/menu-white.svg' );" )
            
        .col-md-3.col-sm-6.col-xs-6
        
          a#nav-button-xs.bj-nav-button.visible-sm-inline-block.visible-xs-inline-block( href='#', data-activates='sideNavPanel' )
            span.bj-menu-icon( style="background-image: url( '/template/images/menu-white.svg' );" )
        
          #personal_menu.bj-personal.hidden-xs
            //-button.bj-personal-icon( style="background-image: url( '/template/images/profile-white.svg' );" )
            .bj-personal-icon
            
          span#sale-basket-basket-line-container
            a#bx_cart_block.bj-cart-icon(href='/personal/cart/')
              span.b-shopping-cart( style=" background-image: url( '/template/images/basket-white.svg' );" )
              span#bx_cart_num.bj-cart-icon__num 0
          
          span.bj-search-icon.hidden-xs
            span( style=" background-image: url( '/template/images/search-white.svg' );" )
              
          a.bj-earphone-icon(href='#', data-toggle='modal', data-target='#myModal' )
            span( style="background-image: url( '/template/images/phone-white.svg' );" )
          
          .bj-page-header__search-close
          
