@import '../../styl/component-include.styl'

.b-pagination
  //example
  background: embedurl( 'img/blank.gif' );
  
  &-block
    font-size .85rem
    
    a,
    span
      display inline-block
      vertical-align top
      margin 0 5px
      
      &.i-backward
        margin-left 30px
      
      &.i-forward
        margin-left 15px
      
    span.i-active
      display inline-block
      vertical-align top
      color #999