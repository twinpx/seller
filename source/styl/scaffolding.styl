.b-header
  width auto
  
.bj-page-header__top a,.bj-page-header__top a:hover,.bj-page-header__top a:active,.bj-page-header__top a:focus
  color #fff
  text-decoration none

.bj-page-header__submenu
  background-color #fff
  padding 10px 0 0
  height 60px
  overflow hidden
  
  .row
    margin-left 0
    margin-right 0
    
  a
    line-height 40px
    display inline-block

.bj-page-header__submenu .col-md-2,.bj-page-header__submenu .col-md-6
  padding-left 0
  padding-right 0

.bj-page-header__menu-link,.bj-page-header__looks-link,.bj-page-header__sales-link
  line-height 60px!important
  height 60px!important
  margin -10px 0 -9px
  text-align center
  display block!important
  background-color #fff
  transition( background-color .2s ease )

.bj-page-header__menu-link:hover,.bj-page-header__looks-link:hover,.bj-page-header__sales-link:hover,.bj-page-header__menu-link:active,.bj-page-header__looks-link:active,.bj-page-header__sales-link:active,.bj-page-header__menu-link:focus,.bj-page-header__looks-link:focus,.bj-page-header__sales-link:focus
  background-color #f2f2f2

.bj-page-header__menu-link:hover .bj-icon.i-menu,.bj-page-header__looks-link:hover .bj-icon.i-menu,.bj-page-header__sales-link:hover .bj-icon.i-menu,.bj-page-header__menu-link:active .bj-icon.i-menu,.bj-page-header__looks-link:active .bj-icon.i-menu,.bj-page-header__sales-link:active .bj-icon.i-menu,.bj-page-header__menu-link:focus .bj-icon.i-menu,.bj-page-header__looks-link:focus .bj-icon.i-menu,.bj-page-header__sales-link:focus .bj-icon.i-menu
  background-image url('data:image/png;base64,')

.bj-page-header__menu-link:hover .bj-icon.i-looks,.bj-page-header__looks-link:hover .bj-icon.i-looks,.bj-page-header__sales-link:hover .bj-icon.i-looks,.bj-page-header__menu-link:active .bj-icon.i-looks,.bj-page-header__looks-link:active .bj-icon.i-looks,.bj-page-header__sales-link:active .bj-icon.i-looks,.bj-page-header__menu-link:focus .bj-icon.i-looks,.bj-page-header__looks-link:focus .bj-icon.i-looks,.bj-page-header__sales-link:focus .bj-icon.i-looks
  background-image url('data:image/png;base64,')

.bj-page-header__menu-link .bj-icon,.bj-page-header__looks-link .bj-icon,.bj-page-header__sales-link .bj-icon
  margin 0 10% 0 0

@media (max-width:360px)
  .bj-page-header__menu-link .bj-icon,.bj-page-header__looks-link .bj-icon,.bj-page-header__sales-link .bj-icon
    margin-right 10px

.bj-page-header__search
  position relative
  display inline-block
  line-height 40px
  margin-right 25px
  margin-left 11px
  
  .glyphicon
    cursor pointer
    position absolute
    top 1px
    left -5px
    z-index 10
    
    &:before
      display inline-block
      vertical-align top
      width 40px
      height 40px
      background url('data:image/png;base64,') no-repeat center center
      content ''
      
  form
    display inline-block
    width 30px
    height 26px
    
  &.i-active
  
    .bj-page-header__search__input
      width 690px
      opacity 1

.bj-page-header__search__input
  width 30px
  height 32px
  line-height 20px
  padding 6px 10px 6px 32px
  background-color #5c6eb8
  border none
  display inline-block
  vertical-align top
  margin-top 8px
  transition( all .3s ease-in )
  opacity 0
  color #fff
  box-sizing( border-box !important )
  position absolute
  top -4px
  left -2px
  z-index 9
  
  &:focus
    box-shadow none

@media (max-width:1200px)

  .bj-page-header__search
    &.i-active
      .bj-page-header__search__input
        width 620px

@media (max-width:1125px)
  .bj-page-header__search
    &.i-active
      .bj-page-header__search__input
        width 550px

@media (max-width:1065px)
  .bj-page-header__search
    &.i-active
      .bj-page-header__search__input
        width 490px

@media (max-width:770px)
  .bj-page-header__search
    &.i-active
      .bj-page-header__search__input
        width 270px

.bj-page-header__dropdown
  .container-fluid
    max-width 1180px!important
      
  article
    background-color #5c6eb8
    font-size 10pt
    padding 35px 50px 0
    border-top 1px solid #fff
    position absolute
    top 0
    left 0
    z-index 1000
    width 100%
    display none
    
  a
    &:hover
      opacity 0.5
      text-decoration none
      
  menu
    padding 0
    margin 0 0 35px
    list-style-type none
    
  .up
    background url('data:image/png;base64,') no-repeat center 7px
    background-color #5c6eb8
    width 171px
    height 35px
    position absolute
    bottom -28px
    left 50%
    margin-left -85px
    border 0
    
    &:hover
      -webkit-animation moveUp .3s
      -o-animation moveUp .3s
      animation moveUp .3s

.bj-page-header__dropdown,.bj-page-header__dropdown a,.bj-page-header__dropdown a:hover,.bj-page-header__dropdown a:active,.bj-page-header__dropdown a:focus,.bj-page-header__dropdown h3,.bj-page-header__dropdown .h3
  color #fff

.bj-page-header
  .glyphicon
    font-size 14pt
    
  button
    &.glyphicon-user
      background 0 0
      border none
      padding 0
      
  .popover
    border-radius 3px
    
  .popover-content
    line-height 1.72857143
    
    a
      display block
      margin-bottom 5px
      
    b
      font-weight 400
      
    .glyphicon
      line-height 1.72857143
      width auto
      font-size 10.5pt
      margin-left 6px

.bj-logo
  font-size 18pt
  display inline-block
  vertical-align top
  margin-right 10px
  
  img
    max-width 143px
    vertical-align top

@media (max-width:767px)
  .bj-logo
    display inline-block
    vertical-align top
    line-height 40px

.bj-logo-space
  line-height 40px
  
  .glyphicon
    width 40px
    line-height 40px
    text-align center
    
    &:hover
        text-decoration none
        
  .bj-menu-icon
    height 40px
    line-height 40px
    width 40px
    display inline-block
    vertical-align top
    background url('data:image/gif;base64,R0lGODlhFAATAIABAP///////yH5BAEAAAEALAAAAAAUABMAAAIahI+pyxgPo5y02ouz3rz573HiSJbmuYHqChQAOw==') no-repeat center center
    
  div[id^=bx_incl_area]
    display inline-block
    
  @media (max-width:767px)
    padding-right 58px

.bj-logo-space__icon
  margin 0 9px
  display inline-block
  vertical-align top
  
  &.glyphicon-user
    &:before
      display inline-block
      vertical-align top
      width 40px
      height 40px
      background url('data:image/png;base64,') no-repeat center center
      content ''
      
  &:hover
    text-decoration none
    
  &.glyphicon-info-sign
    margin 0 15px

  @media (max-width:767px)
    
    &.bj-cart-icon
      float right
      margin 0
      
    .tooltip
      display none!important

.bj-top-nav
  display inline-block
  
  a
    display inline-block
    line-height 40px
    padding 0 11px
    margin 0 11px

.bj-top-subnav

  &:before
    content ' '
    display inline-block
    vertical-align top
    line-height 40px
    width 19px
    height 40px
    background url('data:image/png;base64,') no-repeat center center
    margin-right -9px
    margin-left 10px
    
  a
    display inline-block
    margin 0 22px