/*h1-h6*/

h1, .h1,
h2, .h2, .b-h2,
h3, .h3,
h4, .h4,
h5, .h5
h6, .h6
  display block
  word-wrap break-word
  font-family inherit
  line-height 1.1

  &:first-child
    margin-top 0
    
  small,
  .small
    font-weight 400
    line-height 1
    color #777
    
  a
    font-weight inherit
    
h1, .h1,
h2, .h2, .b-h2,
h3, .h3
  font-weight 400
  color #333

  .small,
  small
    font-size 65%
  
h4, .h4,
h5, .h5
h6, .h6
  font-weight 700
  color #999

  .small,
  small
    font-size 75%
  
h1, .h1
  margin 0 0 1.2rem
  
  &,
  &.i-small
    font-size 1.9rem
  
  @media (max-width: 767px)
    font-size 1.35rem
    text-align center

h2, .h2, .b-h2
  font-size 1.65rem
  margin 1.78rem 0 1.2rem 0
  
  @media( max-width 767px )
    font-size 1.2rem
  
h3, .h3
  font-size 1.25rem
  margin 1.46rem 0 1.2rem 0
  
h4, .h4
  font-size 2.28rem
  margin 1.14rem 0 10px 0

h5, .h5
  font-size 9pt
  margin 0.82rem 0 10px 0
  
h6, .h6
  font-size 12px
  margin 0.5rem 0 0.4rem 0
  
/*_h1-h6_*/
  
